@page "/states/edit/{StateId:int}"

@if (state is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <FormWithName @ref="stateForm" Label="Estado/Departamento:" Model="state" OnValidSubmit="SaveAsync" ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}