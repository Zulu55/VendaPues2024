@page "/api/accounts/ConfirmEmail"

<MudPaper Class="confirmation-container p-4 shadow-sm">
    <MudGrid>
        <MudItem xs="12" Class="text-center mb-4">
            <MudText Typo="Typo.h3">Confirmación</MudText>
        </MudItem>
        <MudItem xs="12" Class="text-center mb-4">
            <MudText Typo="Typo.body1">Presione el botón para confirmar su cuenta</MudText>
        </MudItem>
        <MudItem xs="12" Class="text-center">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ConfirmAccountAsync">Confirmar Cuenta</MudButton>
        </MudItem>
    </MudGrid>
</MudPaper>